.hover-view
  display: block
  position: relative

  &::before
    display: block
    content: "Hoverâ€¦"
    position: absolute
    transition: opacity 0.2s linear
    font-style: italic

  &::after
    display: block
    content: attr(data-text)
    position: absolute
    opacity: 0
    transition: opacity 0.2s linear

  &:hover::before
    opacity: 0

  &:hover::after
    opacity: 1
