.hover-view
  display: block
  position: relative
  min-width: 4em

  &::before
    display: block
    content: "Move cursor here"
    position: absolute
    transition: opacity 0.2s linear

  &::after
    display: block
    content: attr(data-text)
    position: absolute
    opacity: 0
    transition: opacity 0.2s linear

  &:hover::before
    opacity: 0

  &:hover::after
    opacity: 1
